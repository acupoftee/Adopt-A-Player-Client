<div class="profile-container" data-id="{{user.id}}">
  <div class="profile-header">
    <img class="profile-pic-main" src="{{user.avatar_url}}"/>
    {{#if user.display_name}}
      <h1>{{limit user.display_name 20}}</h1>
      <!-- <p class="editable">Edit</p> -->
    {{else}}
      <h1>{{limit user.email 20}}</h1>
    {{/if}}

    {{#if user.summary}}
      <p class="summary">{{limit user.summary 150}}</p>
    {{/if}}

  </div>
  {{> bar-contents/another_bar}}

    {{> hero/another_hero_view}}

    <div class="line-container">
      <div class="header-line"></div>
      <h3>Videos</h3>
      <div class="header-line"></div>
    </div>
  {{#if user.videos}}
      <div class="video-view">
    {{#each user.videos as |video|}}
    <div class="video-container">
    <h5 data-id="{{video.id}}">{{limit video.title 30}}</h5>
    <div class="video-wrapper">
    <iframe width="560" height="340" data-id="{{video.id}}" src="{{grabVideoUrl video.url}}"></iframe>
  </div>
  </div>
    </br>
    {{/each}}
  {{else}}
      <p>This user doesn't have any VODs yet.</p>
  {{/if}}
</div>
</div>
