<div class="container">
  {{#groupEach 3 users}}
    <div class="row">
      {{#each this}}
          <section data-id="{{id}}" class="profile-card">
            {{#if avatar_url}}
              <img class="profile-pic" data-id="{{id}}" src="{{avatar_url}}">
            {{else}}
                <img class="profile-pic" data-id="{{id}}" src="https://pbs.twimg.com/media/DEYvBMSVYAAiTnF.png">
            {{/if}}
              {{#if display_name}}
                <h3 data-id="{{id}}">{{limit display_name 20}}</h3>
              {{else}}
                <h3 data-id="{{id}}">{{limit email 20}}</h3>
              {{/if}}
              {{#if is_mentor}}
                <p class="status" data-id="{{id}}">Mentor</p>
              {{else}}
                <p class="status" data-id="{{id}}">Mentee</p>
              {{/if}}
            {{#if platform}}
              <h6 class="card-platform" data-id="{{id}}">
                Platform: {{platform}}
              </h6>
            {{/if}}
            <p data-id="{{id}}">
              {{limit summary 150}}
            </p>
          </section>
      {{/each}}
    </div>
  {{/groupEach}}
</div>
