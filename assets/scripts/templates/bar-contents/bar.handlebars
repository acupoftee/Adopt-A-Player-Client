<div class="details">
  <div class="detail">
    <h5>Status</h5>
    {{#if user.is_mentor}}
      <p class="editable"><span class="edit-mentor">Mentor</span><small>✎</small></p>
    {{else}}
      <p class="editable"><span class="edit-mentor">Mentee</span><small>✎</small></p>
    {{/if}}
  </div>
  <!-- <p class="editable">Edit</p> -->
  <div class="detail">
    <h5>Platform</h5>
    {{#if user.platform}}
      <p class="editable"><span class="edit-platform">{{user.platform}} <small>✎</small></span></p>
      <!-- <p class="editable">Edit</p> -->
    {{else}}
      <p class="editable edit-platform">Add Platform</p>
    {{/if}}

  </div>

  <div class="detail">
    <h5>Region</h5>
     {{#if user.region}}
      <p class="editable"><span class="edit-region">{{user.region}} <small>✎</small></span></p>
      <!-- <p class="editable">Edit</p> -->
    {{else}}
      <p class="editable edit-region">Add Region</p>
    {{/if}}

  </div>


  <div class="detail">
    <h5>Skill Rating</h5>
    {{#if user.skill_rating}}
      <p class="editable"><span class="edit-skill-rating">{{user.skill_rating}} <small>✎</small></span></p>
      <!-- <p class="editable">Edit</p> -->
    {{else}}
      <p class="editable edit-skill-rating">Add Skill Rating</p>
    {{/if}}

  </div>
</div>
