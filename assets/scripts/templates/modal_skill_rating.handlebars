<div class="modal fade" id="newSkillRating" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Skill Rating</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="modal-greeting">
          <h5>Edit Skill Rating</h5>
        </div>
        <form id="skill-rating">
          <div class="form-group">
            <input name="user[skill_rating]" type="number" placeholder="New Skill Rating" min="1" max="5000" class="form-control">
          </div>
          <button class="btn btn-primary">Change Skill Rating</button>
        </form>
      </div>
    </div>
  </div>
</div>
