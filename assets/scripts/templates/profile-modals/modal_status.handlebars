<div class="modal fade" id="newStatus" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="modal-greeting">
          <h5>Edit Status</h5>
          <!-- <small>Update your Overwatch Skill Rating</small>
          <small>with a number between 1 and 5000.</small> -->
        </div>
        <form id="is-mentor">
          <div class="form-group">
            <label>Decide between being a mentor or mentee.</label>
            <select name="user[is_mentor]" class="form-control" required>
              <option data-option="true">Mentor</option>
              <option data-option="false">Mentee</option>
            </select>
          </div>
          <button class="btn btn-success">Change Status</button>
            <button class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        </form>
      </div>
    </div>
  </div>
</div>
