<div class="profile-container">
  <div class="profile-header">
    {{#if user.avatar_url}}
      <img class="editable edit-avatar profile-pic-main pic-edit" src="{{user.avatar_url}}" />
    {{else}}
      <img class="editable edit-avatar-profile-pic-main pic-edit" src="https://pbs.twimg.com/media/DEYvBMSVYAAiTnF.png" />
    {{/if}}
    <span class="editable edit-avatar">&thinsp;✎</span>

    {{#if user.display_name}}
      <div class="edit-container">
        <h1 class="editable edit-display-name">
          {{limit user.display_name 20}}</h1>
        <p class="editable edit-display-name pencil">✎</p>
      </div>
      <!-- <p class="editable">Edit</p> -->
    {{else}}
      <h1 class="new-display-name">{{limit user.email 20}}</h1>
      <p class="editable add-display-name">Add Display Name</p>
    {{/if}}

    {{#if user.summary}}
      <div class="summary-box">
        <p class="editable edit-summary summary">{{limit user.summary 150}} <small class="editable edit-summary">✎</small></p>
      </div>
      <!-- <p class="editable">Edit</p> -->
    {{else}}
      <p class="editable edit-summary">Add Summary</p>
    {{/if}}



  </div>
  {{> bar-contents/bar}}

  {{> hero/hero_view}}
  <div class="line-container">
    <div class="header-line"></div>
    <h3>Videos</h3>
    <div class="header-line"></div>
  </div>
  <div class="video-view">
    {{#if user.videos}}
      <p class="editable add-video-option">Add New Video</p>
      {{#each user.videos as |video|}}
        </br>
        <div class="edit-container">
        <h5 class="editable edit-video" data-id="{{video.id}}">{{limit video.title 30}}</h5>
        <p class="editable edit-video pencil" data-id="{{video.id}}">&thinsp;✎</p>
      </div>
        <div class="video-wrapper">
          <iframe width="560" height="340" data-id="{{video.id}}" src="{{grabVideoUrl video.url}}"></iframe>
        </div>
        </br>
      {{/each}}
    {{else}}
      <p class="editable add-video-option">Add New Video</p>
    {{/if}}
  </div>
</div>

